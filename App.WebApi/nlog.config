<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <!-- variable reusable para la ruta -->
  <variable name="logPath" value="C:\www\gaspersoft.com\logs\Guardias" />

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>
    <target xsi:type="File" name="tracefile" fileName="${var:logPath}\Trace-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${aspnet-mvc-action}|${message}" createDirs="true" />
    <target xsi:type="File" name="debugfile" fileName="${var:logPath}\Debug-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${aspnet-mvc-action}|${message}" createDirs="true" />
    <target xsi:type="File" name="informationfile" fileName="${var:logPath}\Information-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${aspnet-mvc-action}|${message}" createDirs="true" />
    <target xsi:type="File" name="warningfile" fileName="${var:logPath}\Warning-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${aspnet-mvc-action}|${message}" createDirs="true" />
    <target xsi:type="File" name="errorfile" fileName="${var:logPath}\Error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${aspnet-mvc-action}|${message}" createDirs="true" />
  </targets>

  <rules>
    <!-- Skip non-critical Microsoft logs -->
    <logger name="Microsoft.*" maxlevel="Fatal" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- Enrutado por nivel: cada nivel escribe sólo en su fichero -->
    <logger name="*" minlevel="Trace" maxlevel="Trace" writeTo="tracefile" />
    <logger name="*" minlevel="Debug" maxlevel="Debug" writeTo="debugfile" />
    <logger name="*" minlevel="Info"  maxlevel="Info"  writeTo="informationfile" />
    <logger name="*" minlevel="Warn"  maxlevel="Warn"  writeTo="warningfile" />

    <!-- Todos los errores (Error y Fatal) -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />
  </rules>
</nlog>